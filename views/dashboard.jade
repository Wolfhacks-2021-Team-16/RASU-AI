              li
                a(href='#')
                  i.fa.fa-calendar(aria-hidden='true')
                  span.hidden-xs.hidden-sm Users
              li
                a(href='#')
                  i.fa.fa-cog(aria-hidden='true')
                  span.hidden-xs.hidden-sm Setting
